{
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "jsxSingleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "always",
    "proseWrap": "always",
    "htmlWhitespaceSensitivity": "css",
    "endOfLine": "lf",
    "endOfFileLinebreak": "true",
    "overrides": [
        {
            "files": "*.md",
            "options": {
                "printWidth": 100,
                "tabWidth": 4,
                "singleQuote": false
            }
        }
    ]
}